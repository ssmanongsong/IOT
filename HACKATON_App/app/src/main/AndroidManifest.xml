<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.david.hackaton_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity
            android:name=".Driver_Conductor"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Passenger"
            android:label="@string/title_activity_passenger"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Checker"
            android:label="@string/title_activity_checker"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Cashier"
            android:label="@string/title_activity_cashier"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>