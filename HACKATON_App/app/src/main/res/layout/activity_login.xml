<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient"
    tools:context="com.example.david.hackaton_app.Login">

    <EditText
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:background="#11000000"
        android:layout_marginTop="199dp"
        android:id="@+id/textUN"
        android:drawableLeft="@drawable/ic_action_name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textPass"
        android:layout_alignStart="@+id/textPass" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#11000000"
        android:id="@+id/textPass"
        android:drawableLeft="@drawable/ic_action_pass"
        android:layout_below="@+id/textUN"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Password" />

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="25dp"
        app:cardElevation="@dimen/activity_horizontal_margin"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="LOGIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textButton1"
                android:textColor="#fff"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:text="Register Here"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textPass"
        android:layout_marginTop="120dp"
        android:id="@+id/textView3"
        android:textColor="#4d4dff"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="12dp"
        android:textColor="#000033"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="Innovation on Transportation.ph"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/bus"
        android:layout_marginTop="51dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="IoT.ph"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:id="@+id/textView2"
        android:textSize="16sp"
        android:layout_width="100dp"
        android:textAlignment="center"
        android:textColor="#000033" />

    <TextView
        android:text="Incorrect Name and Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textPrompt"
        android:layout_below="@+id/textPass"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="10sp"
        android:visibility="invisible" />


</RelativeLayout>
