<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/roadpt"
    tools:context="com.example.david.hackaton_app.Driver_Conductor$PlaceholderFragment">

    <RadioButton
        android:text="Pacita (BBL) -> Makati"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/radioButton9"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_below="@+id/textCLabel2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="12sp" />


    <RadioButton
        android:text="Pacita (BBL) -> Pasay"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton10"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="12sp"
        android:layout_alignTop="@+id/radioButton9"
        android:layout_toRightOf="@+id/radioButton9"
        android:layout_toEndOf="@+id/radioButton9"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/button2"
        android:layout_below="@+id/radioButton9"
        android:layout_alignLeft="@+id/radioButton9"
        android:layout_alignStart="@+id/radioButton9"
        android:layout_alignRight="@+id/radioButton10"
        android:layout_alignEnd="@+id/radioButton10" />

    <TextView
        android:text="Select a Destination"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:id="@+id/textCLabel2"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_marginTop="114dp"
        android:textAlignment="center"
        android:layout_below="@+id/radioButton6"
        android:layout_toRightOf="@+id/radioButton6"
        android:layout_toEndOf="@+id/radioButton6" />

    <RadioButton
        android:text="Php 36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton7"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_above="@+id/textCLabel2"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:text="Php 40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton8"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_above="@+id/textCLabel2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RadioButton
        android:text="Php 30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton6"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="79dp" />

    <TextView
        android:text="Select a Fare"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/radioButton8"
        android:layout_toStartOf="@+id/radioButton8" />


</RelativeLayout>

