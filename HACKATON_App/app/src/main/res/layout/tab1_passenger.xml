<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/roadpt"
    tools:context="com.example.david.hackaton_app.Passenger$PlaceholderFragment">


    <TextView
        android:text="Queue Line No. = "
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="21dp"
        android:id="@+id/textLabel1"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView

        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:id="@+id/textQueue"
        android:layout_toRightOf="@+id/textLabel1"
        android:layout_marginStart="28dp"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp" />



    <TextView

        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textLabel2"
        android:layout_below="@+id/textLabel1"
        android:layout_alignLeft="@+id/textLabel1"
        android:layout_alignStart="@+id/textLabel1"
        android:text="No. of Available Buses"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp"
      />

    <TextView
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:id="@+id/textAvail"
        android:layout_alignBaseline="@+id/textLabel2"
        android:layout_alignBottom="@+id/textLabel2"
        android:layout_toRightOf="@+id/textQueue"
        android:layout_toEndOf="@+id/textQueue"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/spinner1"
        android:layout_alignLeft="@+id/textLabel2"
        android:layout_alignStart="@+id/textLabel2"
        android:id="@+id/textLabel3"
        android:layout_alignBottom="@+id/spinner1"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="16sp"/>

    <Spinner
        android:layout_marginLeft="13dp"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"

        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textLabel3"
        android:layout_toEndOf="@+id/textLabel3"
        android:layout_marginStart="10dp" />



</RelativeLayout>
